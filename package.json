{
  "name": "nest-devtools-telescope",
  "version": "0.1.0",
  "private": true,
  "description": "DevTools tipo Laravel Telescope para NestJS - rastreamento de requisições, exceções, logs e queries",
  "author": "Lucas",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "build:backend": "cd packages/shared && bun run build && cd ../backend && bun run build",
    "build:netlify": "bun install && cd packages/shared && bun run build && cd ../frontend && bun run build",
    "dev": "bun run dev:backend",
    "dev:agent": "cd packages/agent && bun run dev",
    "dev:backend": "cd packages/backend && bun run dev",
    "dev:frontend": "cd packages/frontend && bun run dev",
    "test": "bun test",
    "lint": "bun run --filter '*' lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
